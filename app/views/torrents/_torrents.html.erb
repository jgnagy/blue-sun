<table>
  <tr>
    <th>Name</th>
    <th>Added By</th>
    <th>Actions</th>
  </tr>
<% if @torrents.kind_of?(Sunspot::Search::StandardSearch) %>
  <% @torrents.each_hit_with_result do |hit,t| %>
  <tr>
    <% if !hit.nil? %>
    <td title="<%= "#{hit.score * 100}%" %>">
    <% else %>
    <td>
    <% end %>
    <%= t.name %>
    </td>
    <td><%= t.user.name %></td>
    <td><%= action_link :show, t %></td>
  </tr>
  <% end %>
<% else %>
  <% @torrents.each do |t| %>
  <tr>
    <td><%= t.name %></td>
    <td><%= t.user.name %></td>
    <td><%= action_link :show, t %></td>
  </tr>
  <% end %>
<% end %>
</table>
